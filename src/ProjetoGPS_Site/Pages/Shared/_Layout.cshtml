<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
	<title>@ViewData["Title"] - BrightStart</title>
	<link rel="icon" type="image/x-icon" href="favicon.ico" />
	<!-- Font Awesome icons (free version) -->
	<script src="https://use.fontawesome.com/releases/v5.15.3/js/all.js" crossorigin="anonymous"></script>
	<!-- Google Fonts -->
	<link href="https://fonts.googleapis.com/css?family=Catamaran:100,200,300,400,500,600,700,800,900" rel="stylesheet" />
	<link href="https://fonts.googleapis.com/css?family=Lato:100,100i,300,300i,400,400i,700,700i,900,900i" rel="stylesheet" />
	<!-- Core theme CSS (includes Bootstrap) -->
	<link href="~/css/styles.css" rel="stylesheet" />
</head>

<!-- BOOTSTRAP (CSS/JS) BUNDLE -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"></script>
<script type="text/javascript" src="js/scripts.js"></script>

<body id="page-top">
	<!-- NAV START -->
	<nav class="navbar navbar-expand-lg navbar-dark navbar-custom fixed-top">
		<div class="container px-5">
			<img class="navbar-brand logo" onclick="topFunction()" href="#page-top" src="~/img/logodeloitte.svg" />
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
			<div class="collapse navbar-collapse" id="navbarResponsive">
				<ul class="navbar-nav ms-auto" style="margin-top: 0px">
					@if (ViewData["Title"] == "Home page")
					{
						<li class="nav-item active"><a class="nav-link active" href="Index" style="color: #75B625;">Início</a></li>
					}
					else
					{
						<li class="nav-item"><a class="nav-link" href="Index">Início</a></li>
					}
					
					@if (ViewData["Title"] == "Contactos")
					{
						<li class="nav-item active"><a class="nav-link active" href="Contactos" style="color: #75B625;">Contactos</a></li>
					}
					else
					{
						<li class="nav-item"><a class="nav-link" href="Contactos">Contactos</a></li>
					}
					
					@if (ViewData["Title"] == "Sobre")
					{
						<li class="nav-item active"><a class="nav-link active" href="Sobre" style="color: #75B625;">Sobre</a></li>
					}
					else
					{
						<li class="nav-item"><a class="nav-link" href="Sobre">Sobre</a></li>
					}
					
					@if (ViewData["Title"] == "Inscrição")
					{
						<li class="nav-item active"><a class="nav-link active" href="Inscricao" style="color: #75B625;">Inscrição</a></li>
					}
					else
					{
						<li class="nav-item"><a class="nav-link" href="Inscricao">Inscrição</a></li>
					}
					
					@if (ViewData["Title"] == "Testemunhos")
					{
						<li class="nav-item active"><a class="nav-link active" href="Testemunhos" style="color: #75B625;">Testemunhos</a></li>
					}
					else
					{
						<li class="nav-item"><a class="nav-link" href="Testemunho">Testemunhos</a></li>
					}
				</ul>
			</div>
		</div>
	</nav>
	<!-- NAV END -->

	<!-- HEADER START -->
	<header class="masthead text-center text-white" style="height: 575px">
		<div class="masthead-content" style="margin-top: -5%">
			<div class="container px-5">
				@if (ViewData["Info"] != null)
				{
					<div class="container alert alert-success" role="alert" style="width: 25%">
						<a>@ViewData["Info"]</a>
					</div>
				}
				<img class=" img-fluid rounded-circle" style="width: 25rem; margin-top: 0px; float: left;" src="~/img/02.png">
				<div style="float: right;">
					@if (ViewData["HeaderTitle"] != null)
					{
					
					<h1 class="masthead-heading mb-0">@ViewData["HeaderTitle"]</h1>
					}
					else
					{
				
						<h1 class="masthead-heading mb-0">Programa BrightStart</h1>
					}
					<h2 class="masthead-subheading mb-0">@ViewData["HeaderDescription"]</h2>
				</div>
			</div>
		</div>
	</header>
	<!-- HEADER END -->

	<!-- MAIN START -->
	<div class="container">
		<main role="main">
			@RenderBody()
		</main>
	</div>
	<!-- MAIN END -->

	<!-- FOOTER START -->
	<footer class="py-5">
		<img class="m-0 footer-img" src="~/img/edificioDeloitte.png" />
	</footer>
	<!-- FOOTER END -->
</body>
</html>


@if (ViewData["alert"] != null)
{
	<script type="text/javascript">
		window.onload = function () {
			alert("@ViewData["alert"]");
		};
	</script>
}